<section>
   <ol>
      {{#ulItems}}
          <li> <a href="{{url}}"> {{label}} </a> </li>
       {{/ulItems}}
   </ol>
</section>
<section>
    <div class="section-title">
        <h2>Daily Summary</h2>
    </div>
    <table class="daily-summary-table">
       <thead>
        <tr class="daily-summary-tr">
            <th class="colum-title">id</th>
            <th class="colum-title">num_grades</th>
            <th class="colum-title">num_materials</th>
            <th class="colum-title">num_anouncements</th>
            <th class="colum-title">num_evaluation</th>
            <th class="colum-title">num_grades_err</th>
            <th class="colum-title">num_materials_err</th>
            <th class="colum-title">num_anouncements_err</th>
            <th class="colum-title">num_evaluation_err</th>
            <th class="colum-title">created_at</th>
            <th class="colum-title">updated_at</th>
        </tr>
       </thead>
       <tbody>
            {{#row}}
                <tr class="daily-summary-tr">
                    <td class="colum-value">{{id}}</td>
                    <td class="colum-value">{{num_grades}}</td>
                    <td class="colum-value">{{num_materials}}</td>
                    <td class="colum-value">{{num_anouncements}}</td>
                    <td class="colum-value">{{num_evaluation}}</td>
                    <td class="colum-value">{{num_grades_err}}</td>
                    <td class="colum-value">{{num_materials_err}}</td>
                    <td class="colum-value">{{num_anouncements_err}}</td>
                    <td class="colum-value">{{num_evaluation_err}}</td>
                    <td class="colum-value">{{date}}</td>
                    <td class="colum-value">{{updated_at}}</td>
                </tr>
            {{/row}}
       </tbody>
    </table>
</section>

<style>
    .daily-summary-table {
        width: 100%;
        border-collapse: collapse;
        margin-bottom: 20px;
    }

     .colum-title {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
         background-color: #f2f2f2;
     }

     .colum-value {
        padding: 10px;
        text-align: center;
        border: 1px solid #ddd;
        width: 2em;
     }

    .daily-summary-tr:nth-child(even) {
        background-color: #f9f9f9;
    }
</style>